#include <iostream>
using namespace std;

class complex{
    int real;
    int imaginary;
    public:
    complex(){
        real= 0;
        imaginary=0;
    }
    complex(int r){
        real=r;
        imaginary=0;
    }
     complex(int r, int i){
        real=r;
        imaginary= i;
         
     }
       
    void display(){
        cout<< "real part = "<<real<<endl;
       
        cout<< "imaginary part = "<<imaginary<<endl;
        if(imaginary>=0){
        cout<< "complex no. = "<<real<<"+"<<abs(imaginary)<<"i"<<endl;}
        else{
        cout<< "complex no. = "<<real<<"-"<<abs(imaginary)<<"i"<<endl;
       
        }
   
    }
};

int main()
{
 complex c1;
 complex c2(3);
 complex c3(3,-7);
 
 c1.display();
 c2.display();
 c3.display();
    return 0;
}
